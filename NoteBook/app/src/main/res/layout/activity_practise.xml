<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".controller.ActivityPractise">

    <Button
        android:id="@+id/btnBox"
        android:layout_width="0dp"
        android:layout_height="80dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="50dp"
        android:layout_marginEnd="5dp"
        android:layout_marginBottom="30dp"
        android:background="@drawable/vien_trang"
        android:drawableLeft="@drawable/write_practise"
        android:text="Điền từ"
        android:textSize="20sp"
        android:textAllCaps="false"
        app:layout_constraintBottom_toTopOf="@+id/btnNew"
        app:layout_constraintEnd_toStartOf="@+id/btnChoose"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView3" />

    <Button
        android:id="@+id/btnSpeak"
        android:layout_width="0dp"
        android:layout_height="80dp"
        android:layout_marginStart="5dp"
        android:layout_marginEnd="10dp"
        android:drawableLeft="@drawable/talk_practise"
        android:text="Luyện nói"
        android:textSize="20sp"
        android:background="@drawable/vien_trang"
        android:textAllCaps="false"
        app:layout_constraintBottom_toBottomOf="@+id/btnNew"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/btnNew"
        app:layout_constraintTop_toTopOf="@+id/btnNew" />

    <Button
        android:id="@+id/btnNew"
        android:layout_width="0dp"
        android:layout_height="80dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="22dp"
        android:layout_marginEnd="5dp"
        android:layout_marginBottom="150dp"
        android:drawableLeft="@drawable/sort_practise"
        android:text="Tính năng mới"
        android:background="@drawable/vien_trang"
        android:textAllCaps="false"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/btnSpeak"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnBox" />

    <Button
        android:id="@+id/btnChoose"
        android:layout_width="0dp"
        android:layout_height="80dp"
        android:layout_marginStart="5dp"
        android:layout_marginEnd="10dp"
        android:drawableLeft="@drawable/choose_practise"
        android:text="Chọn đáp án"
        android:background="@drawable/vien_trang"
        android:textSize="20sp"
        android:textAllCaps="false"
        app:layout_constraintBottom_toBottomOf="@+id/btnBox"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/btnBox"
        app:layout_constraintTop_toTopOf="@+id/btnBox" />

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="100dp"
        android:layout_marginBottom="50dp"
        android:background="@null"
        app:layout_constraintBottom_toTopOf="@+id/btnBox"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/img_text_practise"
        tools:ignore="MissingConstraints" />

</androidx.constraintlayout.widget.ConstraintLayout>